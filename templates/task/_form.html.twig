{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row justify-content-end">
          <div class="col-6">
            <div class="form-group row">
              <div class="col-2">
                  {{ form_label(form.title) }}
              </div>
              <div class="col-10">
                  {{ form_widget(form.title) }}
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="form-group row">
              <div class="col-1 offset-2">
                  {{ form_label(form.status) }}
              </div>
              <div class="col-9" id="some-custom-id">
                  {{ form_widget(form.status) }}
              </div>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-1">
            {{ form_label(form.description) }}
          </div>
          <div class="col-11" id="some-custom-id">
            {{ form_widget(form.description) }}
          </div>
        </div>


    <button class="btn btn-success offset-11 col-1 mt-4">{{ button_label|default('Cr√©er') }}</button>
{{ form_end(form) }}

